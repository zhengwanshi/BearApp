<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.bearapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".BearApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".editprofile.EditProfileActivity">
        </activity>
        <activity android:name=".Register.RegisterActivity">
        </activity>
        <activity android:name=".main.MainActivity">
        </activity>
        <activity android:name=".createroom.CreateLiveActivity">
        </activity>
        <activity android:name=".hostlive.HostLiveActivity">
        </activity>
        <activity android:name=".watchers.WatcherActivity">
        </activity>
    </application>

</manifest>